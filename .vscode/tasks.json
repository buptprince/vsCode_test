{
    "tasks": [
        {
            "type": "shell",    
            "label": "g++-8 build active file",  //命令是g++-8命令
            "command": "/usr/local/bin/g++-8",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/local/bin"
            }
        }
    ],
    "version": "2.0.0"
}